function __mapToDef() {
    user="${1}"
    host="${2}"
    def="${3}"
    nix="${4}"
    if [ "${user}" = "$(whoami)" ] && [[ "$(hostname)" == *"${host}"* ]] ; then
        if [ -r "$HOME/.dotfiles/samples/${def}" ] ; then
            echo "Find ${def} script for user ${user} on $(hostname)"
            export MY_NIX_PROFILE=$nix
            source "$HOME/.dotfiles/samples/${def}"
        else
            echo "Cannot find def"
        fi
    fi

}

